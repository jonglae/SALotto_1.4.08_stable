<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTEST"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.8"
            android:background="@drawable/ripple_button1"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="7"
            android:text="@string/Gen_btnf31"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_save1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.2"
            android:background="@drawable/ripple_save"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="7"
            android:text="@string/btn_save"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:id="@+id/LimgLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/limg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball1" />

            <ImageView
                android:id="@+id/limg2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball2" />

            <ImageView
                android:id="@+id/limg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball3" />

            <ImageView
                android:id="@+id/limg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball4" />

            <ImageView
                android:id="@+id/limg5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball1" />

            <ImageView
                android:id="@+id/limg6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ball2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/limgtextlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/limgtext1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/limgtext2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/limgtext3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/limgtext4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/limgtext5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/limgtext6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
