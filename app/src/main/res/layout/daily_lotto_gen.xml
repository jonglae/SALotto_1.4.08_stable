<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTEST3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.8"
            android:background="@drawable/ripple_share2"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="7"
            android:text="@string/Gen_btnf33"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_save3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.2"
            android:background="@drawable/ripple_save"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="7"
            android:text="@string/btn_save"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:id="@+id/LimgLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dlimg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dailyball2" />

            <ImageView
                android:id="@+id/dlimg2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dailyball2" />

            <ImageView
                android:id="@+id/dlimg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dailyball2" />

            <ImageView
                android:id="@+id/dlimg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dailyball2" />

            <ImageView
                android:id="@+id/dlimg5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dailyball2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/limgtextlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dltext1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#555353"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.2"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dltext2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#555353"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.2"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dltext3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#555353"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.2"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dltext4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#555353"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.2"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dltext5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#555353"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.2"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
